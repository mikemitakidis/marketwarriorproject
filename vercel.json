{
    "version": 2,
    "buildCommand": "echo 'No build required'",
    "outputDirectory": "public",
    "rewrites": [
        { "source": "/api/day/:day", "destination": "/api/day/[day].js" },
        { "source": "/api/checkout/stripe", "destination": "/api/checkout/stripe.js" },
        { "source": "/api/webhooks/stripe", "destination": "/api/webhooks/stripe.js" },
        { "source": "/api/promo/validate", "destination": "/api/promo/validate.js" },
        { "source": "/api/quiz/submit", "destination": "/api/quiz/submit.js" },
        { "source": "/day/:day", "destination": "/day.html" },
        { "source": "/login", "destination": "/login.html" },
        { "source": "/welcome", "destination": "/welcome.html" },
        { "source": "/dashboard", "destination": "/dashboard.html" },
        { "source": "/journal", "destination": "/journal.html" },
        { "source": "/terms", "destination": "/terms.html" },
        { "source": "/privacy", "destination": "/privacy.html" },
        { "source": "/certificate", "destination": "/certificate.html" }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                { "key": "Access-Control-Allow-Origin", "value": "*" },
                { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
                { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
            ]
        }
    ]
}
